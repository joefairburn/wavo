{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "warn",
    "perf": "warn"
  },
  "plugins": ["react", "typescript", "jsx-a11y", "unicorn"],
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "eqeqeq": "error",
    "react/jsx-key": "error",
    "jsx-a11y/alt-text": "error"
  },
  "ignorePatterns": ["dist/**", "node_modules/**"]
}
