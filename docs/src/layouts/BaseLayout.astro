---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A small library for drawing waveforms in React" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Wavo</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-background-dark min-h-screen flex flex-col font-display overflow-x-hidden selection:bg-primary selection:text-white"
  >
    <slot />
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
    --color-primary: #f96706;
    --color-background-light: #f8f7f5;
    --color-background-dark: #181411;
    --color-surface: #231b15;
    --color-surface-highlight: #2d241e;
    --color-border-dark: #3a2f27;
    --color-muted: #bba89b;

    --font-display: "Space Grotesk", sans-serif;
    --font-mono: "JetBrains Mono", monospace;

    --radius-DEFAULT: 0.125rem;
    --radius-sm: 0.125rem;
    --radius-lg: 0.25rem;
    --radius-xl: 0.5rem;
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    background: #181411;
    border-left: 1px solid #3a2f27;
  }

  ::-webkit-scrollbar-thumb {
    background: #3a2f27;
    border: 2px solid #181411;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #f96706;
  }

  /* Outlined text effect */
  .text-outline {
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
    color: transparent;
  }

  /* Prose styles for MDX content */
  .prose {
    color: rgba(255, 255, 255, 0.7);
    max-width: 65ch;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    color: white;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.025em;
    margin-top: 2em;
    margin-bottom: 0.5em;
  }

  .prose h1 {
    font-size: 2.5rem;
    margin-top: 0;
  }

  .prose > :first-child {
    margin-top: 0;
  }

  .prose h2 {
    font-size: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #3a2f27;
  }

  .prose h3 {
    font-size: 1.25rem;
  }

  .prose p {
    margin-bottom: 1.25em;
    line-height: 1.75;
  }

  .prose a {
    color: #f96706;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: white;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1.25em;
    padding-left: 1.5em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  .prose code:not(pre code) {
    background: #231b15;
    padding: 0.125rem 0.375rem;
    font-family: "JetBrains Mono", monospace;
    font-size: 0.875em;
    border: 1px solid #3a2f27;
  }

  .prose pre {
    margin: 1.5em 0;
  }

  .prose strong {
    color: white;
    font-weight: 600;
  }

  .prose blockquote {
    border-left: 2px solid #f96706;
    padding-left: 1rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.6);
    margin: 1.5em 0;
  }
</style>
