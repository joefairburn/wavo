---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import DynamicWaveformShowcase from "../components/DynamicWaveformShowcase";
import { siteConfig } from "../config/site";
---

<BaseLayout title="Wavo" description="A small library for drawing waveforms in React">
  <Header currentPath="/" />

  <main class="flex-grow flex flex-col items-center w-full">
    <section class="w-full max-w-[1400px] border-x-2 border-white/5 relative">
      <div
        class="absolute inset-0 z-0 opacity-10 pointer-events-none"
        style="background-image: linear-gradient(#ffffff 1px, transparent 1px), linear-gradient(90deg, #ffffff 1px, transparent 1px); background-size: 40px 40px;"
      >
      </div>

      <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
        <div
          class="flex flex-col justify-center p-8 sm:p-12 lg:p-16 border-b-2 lg:border-b-0 lg:border-r-2 border-white/10 bg-background-dark/90 backdrop-blur-sm"
        >
          <div class="inline-flex items-center gap-2 mb-6 border border-primary/30 bg-primary/5 px-3 py-1 w-fit">
            <span class="size-2 bg-primary rounded-full animate-pulse"></span>
            <span class="text-primary font-mono text-xs uppercase tracking-widest">v{siteConfig.version}</span>
          </div>

          <h2 class="text-white text-6xl sm:text-7xl lg:text-8xl font-black uppercase leading-[0.85] tracking-tighter mb-8">
            Raw <br />
            <span class="text-outline">React</span> <br />
            Waveforms
          </h2>

          <p class="text-white/60 text-lg sm:text-xl font-medium max-w-md mb-10 leading-relaxed">
            Performant, SVG-based visualization primitives for the modern web. Zero fluff, pure data.
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/docs/guides/installation"
              class="h-14 px-8 bg-primary text-black font-bold uppercase tracking-wider hover:bg-white transition-colors flex items-center justify-center gap-2"
            >
              <span>Install Package</span>
              <span class="material-symbols-outlined text-lg">download</span>
            </a>
            <a
              href="/docs"
              class="h-14 px-8 border-2 border-white/20 text-white font-bold uppercase tracking-wider hover:border-white hover:bg-white/5 transition-colors flex items-center justify-center gap-2"
            >
              <span>Read the Docs</span>
              <span class="material-symbols-outlined text-lg">arrow_outward</span>
            </a>
          </div>
        </div>

        <div class="relative flex flex-col items-center justify-center p-8 lg:p-16 bg-[#111]">
          <div class="absolute top-8 left-8 size-4 border-l-2 border-t-2 border-white/30"></div>
          <div class="absolute top-8 right-8 size-4 border-r-2 border-t-2 border-white/30"></div>
          <div class="absolute bottom-8 left-8 size-4 border-l-2 border-b-2 border-white/30"></div>
          <div class="absolute bottom-8 right-8 size-4 border-r-2 border-b-2 border-white/30"></div>

          <div class="w-full max-w-md bg-[#1a1a1a] border-2 border-white/10 shadow-[0_0_50px_rgba(0,0,0,0.5)] flex flex-col relative z-10">
            <div class="flex items-center justify-between px-4 py-3 bg-[#222] border-b border-white/5">
              <div class="flex gap-2 opacity-50">
                <div class="size-3 rounded-full bg-white/20"></div>
                <div class="size-3 rounded-full bg-white/20"></div>
                <div class="size-3 rounded-full bg-white/20"></div>
              </div>
              <span class="text-[10px] font-mono uppercase tracking-widest text-white/30">App.jsx</span>
              <div class="w-10"></div>
            </div>

            <div class="p-5 bg-[#161616] font-mono text-xs sm:text-sm leading-relaxed overflow-x-auto">
              <div class="text-gray-500 mb-2">// 1. Import component</div>
              <div class="text-white/80 mb-4">
                <span class="text-[#c678dd]">import</span> {"{"} Waveform {"}"} <span class="text-[#c678dd]">from</span>
                <span class="text-[#98c379]">'wavo'</span>;
              </div>
              <div class="text-gray-500 mb-2">// 2. Render with data</div>
              <div class="text-white/80">
                <span class="text-[#e5c07b]">return</span> (
                <div class="pl-4">
                  &lt;<span class="text-[#e06c75]">Waveform</span>
                  <div class="pl-4">
                    <span class="text-[#d19a66]">data</span>={"{waveformData}"}
                  </div>
                  /&gt;
                </div>
                )
              </div>
            </div>

            <div
              class="bg-[#0a0a0a] border-y border-white/10 py-2 px-5 flex items-center justify-between group cursor-pointer hover:bg-white/5 transition-colors"
            >
              <div class="flex items-center gap-3">
                <span class="text-primary font-bold text-xs">&#10132;</span>
                <code class="text-white/60 text-xs font-mono">npm install <span class="text-white font-bold">wavo</span></code>
              </div>
              <span class="material-symbols-outlined text-white/20 text-sm group-hover:text-primary transition-colors"
                >content_copy</span
              >
            </div>

            <DynamicWaveformShowcase client:load />
          </div>
        </div>
      </div>
    </section>

    <section class="w-full max-w-[1400px] border-x-2 border-b-2 border-white/10 bg-[#151515]">
      <div class="grid grid-cols-2 md:grid-cols-4 divide-x-2 divide-y-2 md:divide-y-0 divide-white/10">
        <div class="p-6 flex flex-col items-start gap-1 group hover:bg-white/5 transition-colors">
          <span class="text-white/40 font-mono text-xs uppercase tracking-widest">Bundle Size</span>
          <span class="text-white text-3xl font-black tracking-tighter group-hover:text-primary transition-colors"
            >&lt; 2KB</span
          >
        </div>
        <div class="p-6 flex flex-col items-start gap-1 group hover:bg-white/5 transition-colors">
          <span class="text-white/40 font-mono text-xs uppercase tracking-widest">Dependencies</span>
          <span class="text-white text-3xl font-black tracking-tighter group-hover:text-primary transition-colors">ZERO</span>
        </div>
        <div class="p-6 flex flex-col items-start gap-1 group hover:bg-white/5 transition-colors">
          <span class="text-white/40 font-mono text-xs uppercase tracking-widest">Render Engine</span>
          <span class="text-white text-3xl font-black tracking-tighter group-hover:text-primary transition-colors">SVG</span>
        </div>
        <div class="p-6 flex flex-col items-start gap-1 group hover:bg-white/5 transition-colors">
          <span class="text-white/40 font-mono text-xs uppercase tracking-widest">License</span>
          <span class="text-white text-3xl font-black tracking-tighter group-hover:text-primary transition-colors">MIT</span>
        </div>
      </div>
    </section>

    <footer class="w-full bg-black border-t-2 border-white/20 pt-20 pb-10">
      <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 flex flex-col gap-12">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-10">
          <div>
            <h2
              class="text-white text-[15vw] md:text-[8rem] font-black uppercase leading-[0.8] tracking-tighter text-outline hover:text-white transition-colors duration-500 cursor-default"
            >
              WAVO
            </h2>
          </div>
          <div class="flex flex-col gap-4 text-right">
            <a href="/docs" class="text-white text-2xl font-bold uppercase hover:text-primary transition-colors"
              >Documentation</a
            >
            <a
              href={siteConfig.github}
              class="text-white text-2xl font-bold uppercase hover:text-primary transition-colors">GitHub Repo</a
            >
          </div>
        </div>
        <div
          class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-white/10 text-white/40 text-sm font-mono uppercase gap-4"
        >
          <p>&copy; {new Date().getFullYear()} {siteConfig.name}</p>
          <p>Designed for engineers</p>
          <p>MIT License</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>
