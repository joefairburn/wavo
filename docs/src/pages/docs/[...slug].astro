---
import { getCollection, render } from "astro:content";
import DocsLayout from "../../layouts/DocsLayout.astro";

export async function getStaticPaths() {
  const docs = await getCollection("docs");

  return docs.map((entry) => ({
    params: { slug: entry.id === "index" ? undefined : entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <h1>{entry.data.title}</h1>
  {entry.data.description && <p class="text-xl text-white/60 leading-relaxed mb-8">{entry.data.description}</p>}
  <Content />
</DocsLayout>
