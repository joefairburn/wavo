---
import { Code } from "astro-expressive-code/components";

interface Props {
  code?: string;
  lang?: string;
  title?: string;
}

const { code, lang = "tsx", title } = Astro.props;
---

<div class="demo-card border-2 border-[#3a2f27] bg-[#181411]">
  <div class="p-4 border-b border-[#3a2f27] bg-[#231b15]">
    <slot />
  </div>
  {code && <Code code={code} lang={lang} title={title} />}
</div>

<style>
  .demo-card {
    margin: 1.5rem 0;
  }
</style>
