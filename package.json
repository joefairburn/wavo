{
	"name": "wavelet",
	"version": "0.0.1",
	"description": "A small library for drawing waveforms in React.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"style.css"
	],
	"exports": {
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		},
		"require": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"type-check": "tsc --noEmit",
		"build": "pnpm type-check && bunchee",
		"dev": "bunchee --watch",
		"dev:test": "turbo run dev --filter=test...",
		"build:test": "turbo run build --filter=test...",
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix && prettier --write .",
		"test": "playwright test"
	},
	"keywords": [
		"react",
		"waveform"
	],
	"author": "Joe Fairburn <joe.fairburn1@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/joefairburn/wavelet.git"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@types/node": "20.5.7",
		"@types/react": "18.2.55",
		"@types/react-dom": "18.2.18",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"bunchee": "^5.1.5",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"prettier": "^2.5.1",
		"prettier-eslint": "^16.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"turbo": "1.6",
		"typescript": "5.2.2"
	},
	"peerDependencies": {
		"react": "^16.8 || ^17.0 || ^18.0 || ^19.0",
		"react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0"
	},
	"packageManager": "pnpm@8.8.0",
	"dependencies": {
		"@tanstack/react-virtual": "^3.10.8",
		"wavelet": "^0.1.3"
	}
}