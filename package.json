{
  "name": "wavo",
  "version": "0.1.55",
  "description": "A small library for drawing waveforms in React.",
  "keywords": [
    "react",
    "waveform"
  ],
  "license": "MIT",
  "author": "Joe Fairburn <joe.fairburn1@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/joefairburn/wavo.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "pnpm type-check && tsdown",
    "dev": "tsdown --watch",
    "dev:test": "turbo run dev --filter=test...",
    "build:test": "turbo run build --filter=test...",
    "dev:docs": "turbo run dev --filter=docs...",
    "build:docs": "turbo run build --filter=docs...",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "cd test && playwright test",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "lefthook": "^1.11.13",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tsdown": "^0.20.1",
    "turbo": "~2.3.3",
    "typescript": "^5.4.2",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0"
  },
  "packageManager": "pnpm@8.8.0"
}
